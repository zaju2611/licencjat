<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>geoDraw</title>

    <script src="https://cdn.emailjs.com/sdk/2.3.2/email.min.js"></script>
    <script>
        (function () {
            emailjs.init("LSVBL2WjbmAYXZHF8");
        })();
    </script>

    <!-- @include 'links.kit' -->
</head>

<body>

    <main class="mainDraw">

        <div class="wrapper">

            <div class="mainDraw_container">
                <div class="top-page">
                    <section class="logo">
                        <a href="index.html">
                            <img src="../src/img/icons/logo.svg" alt="logoGeoDraw">
                        </a>
                    </section>

                    <section class="mainDraw_container-task-content">
                        <h2 class="title ">Treść zadania</h2>
                        <p class="content"></p>
                    </section>
                </div>
                <div class="middle-page">
                    <section class="stats">
                        <div class="stoper">
                            <p class="text">Czas</p>
                            <p class="value stopwatch">0:00</p>
                        </div>
                        <div class="points">
                            <p class="text">Punkty</p>
                            <p class="value result ">0</p>
                        </div>
                    </section>
                    <section class=" mainDraw_container-tools-board">
                        <div class="row">
                            <label class="title">Figury</label>
                            <ul class="options">
                                <li class="option tool" id="rectangle">
                                    <span class="mdi mdi-checkbox-blank-outline icon"></span>
                                    <span>Prostokąt</span>
                                </li>
                                <li class="option tool" id="circle">
                                    <span class="mdi mdi-checkbox-blank-circle-outline icon"></span>
                                    <span>Koło</span>
                                </li>
                                <li class="option tool" id="triangle">
                                    <span class="mdi mdi-triangle-outline icon"></span>
                                    <span>Trójkąt</span>
                                </li>
                                <li class="option">
                                    <input type="checkbox" id="fill-color">
                                    <label class="fill-color" for="fill-color">Wypełnienie</label>
                                </li>
                            </ul>
                        </div>
                        <div class="row">
                            <label class="title">Opcje</label>
                            <ul class="options">
                                <li class="option tool active" id="brush">
                                    <span class="mdi mdi-brush icon"></span>
                                    <span>Pędzel</span>
                                </li>
                                <li class="option tool " id="line">
                                    <span class="mdi mdi-vector-line icon"></span>
                                    <span>Linia</span>
                                </li>
                                <li class="option tool" id="text">
                                    <span class="mdi mdi-format-text icon"></span>
                                    <span>Tekst</span>
                                </li>
                                <li class="option ">
                                    <input type="range" min="1" max="11" step=".1" id="size-slider">
                                </li>
                            </ul>
                        </div>
                        <div class="row colors">
                            <label class="title">Kolory</label>
                            <ul class="options">
                                <li class="option selected">
                                </li>
                                <li class="option">
                                </li>
                                <li class="option">
                                </li>
                                <li class="option">
                                </li>
                                <li class="option setColor">
                                    <input type="color" id="color-picker" value="#fff">
                                </li>
                            </ul>
                        </div>
                        <div class="row buttons">
                            <button class="button start-play">Start</button>
                            <button class="button clear-canvas" disabled>Wyczyść</button>
                            <button class="button check-answer" disabled>Sprawdź</button>
                            <button class="button next" disabled>Następne</button>

                        </div>
                    </section>
                </div>
                <section class="mainDraw_container-cards">


                    <button class="button-answer wrong-answer"><span class="mdi mdi-close"></span>Źle</button>


                    <div class="mainDraw_container-cards-container">
                        <div class="mainDraw_container-cards-container-drawing-board">
                            <canvas class="canvas"></canvas>
                        </div>
                        <div class="mainDraw_container-cards-container-answer-board"></div>
                    </div>

                    <button class="button-answer good-answer"><span class="mdi mdi-check"></span>Dobrze</button>
                </section>

            </div>
        </div>
        <div class="popupResult ">
            <span class="mdi mdi-close-circle-outline buttonPopup"></span>
            <h2 class="textPopup">Twój wynik</h2>
            <p class="resultPopup"><span class="resultPopupValue">123</span> pkt</p>
            <button class="downloadFile">Pobierz</button>
        </div>
        <canvas id="my-canvas"></canvas>
    </main>

    <!-- @include 'footer.kit' -->
    <script type="module" src="../src/js/setStatistic.js"></script>
    <script src="../src/js/firebaseConfig.js"></script>
    <script src="../src/js/confetti.js"></script>
    <script src="../src/js/timer.js"></script>
    <script src="../src/js/footer.js"></script>
    <script type="module" src="../src/js/draw.js"></script>
    <script type="module" src="../src/js/fetchData.js"></script>
    <script type="module" src="../src/js/teacherMode.js"></script>


</body>

</html>