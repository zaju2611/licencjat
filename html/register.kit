<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>geoDraw</title>

    <!-- @include 'links.kit' -->
</head>

<body>
    <!-- @include 'nav.kit' -->

    <main class="mainRegister">
        <div class="wrapper">
            <div class="mainRegister_container">
                <h1 class="mainRegister_container-h1">Zarejestruj się!</h1>
                <form class="mainRegister_container-form">
                    <div class="mainRegister_container-form-box">
                        <label for="username">Nazwa użytkownika:</label>
                        <input type="text" id="username" placeholder="Podaj nazwę użytkownika">
                        <p class="error-text">error</p>
                    </div>
                    <div class="mainRegister_container-form-box">
                        <label for="email">Adres email:</label>
                        <input type="email" id="email" placeholder="Podaj email">
                        <p class="error-text">error</p>
                    </div>
                    <div class="mainRegister_container-form-box">
                        <label for="password">Hasło:</label>
                        <input type="password" id="password" placeholder="Podaj hasło">
                        <p class="error-text">error</p>
                    </div>
                    <div class="mainRegister_container-form-box">
                        <label for="password2">Powtórz hasło:</label>
                        <input type="password" id="password2" placeholder="Powtórz hasło">
                        <p class="error-text">error</p>
                    </div>
                    <div class="mainRegister_container-form-buttons">
                        <button class="clear">Wyczyść</button>
                        <button class="send">Zarejestuj</button>
                    </div>

                    <div class="popup">
                        <p>Użytkownik zarejestrowany pomyślnie !</p>
                        <button class="close">Zamknij</button>
                    </div>
                </form>
            </div>
        </div>
    </main>


    <!-- @include 'footer.kit' -->

    <script type="module" src="../src/js/logout.js"></script>
    <script type="module" src="../src/js/register.js"></script>
    <script src="../src/js/firebaseConfig.js"></script>
    <script src="../src/js/checkUser.js"></script>
    <script src="../src/js/main.js"></script>
    <script src="../src/js/footer.js"></script>
</body>

</html>